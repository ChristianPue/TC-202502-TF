digraph Flowchart {
    // Configuración global
    rankdir=TB;
    node [style=filled, fontname="Arial", fontsize=12];
    edge [fontname="Arial", fontsize=10];
    bgcolor="#F5F5F5";

    // Nodos del diagrama
    node0 [label="INICIO", shape=oval, fillcolor="#90EE90", penwidth=2];
    node1 [label="int contador = 0", shape=box, fillcolor="#87CEEB"];
    node2 [label="Mientras contador<5", shape=hexagon, fillcolor="#98FB98"];
    node3 [label="contador%2==0", shape=diamond, fillcolor="#FFD700"];
    node4 [label="Escribir \"Número par:\", contador", shape=parallelogram, fillcolor="#FFA07A"];
    node5 [label="Escribir \"Número impar:\", contador", shape=parallelogram, fillcolor="#FFA07A"];
    node6 [label="", shape=circle, fillcolor="#D3D3D3"];
    node7 [label="contador = contador+1", shape=box, fillcolor="#87CEEB"];
    node8 [label="", shape=circle, fillcolor="#D3D3D3"];
    node9 [label="FIN", shape=oval, fillcolor="#FFB6C1", penwidth=2];

    // Conexiones
    node0 -> node1;
    node1 -> node2;
    node2 -> node3;
    node2 -> node7;
    node2 -> node8;
    node3 -> node4 [label="Verdadero", color="#2E8B57", fontcolor="#2E8B57"];
    node3 -> node5 [label="Falso", color="#DC143C", fontcolor="#DC143C"];
    node3 -> node4;
    node3 -> node5;
    node4 -> node6;
    node5 -> node6;
    node6 -> node7;
    node7 -> node2;
    node8 -> node9;
}
